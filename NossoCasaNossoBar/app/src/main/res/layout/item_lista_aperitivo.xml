<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconeAperitivo"
        android:src="@drawable/item_food"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTxtNome"
        android:text="NOME DO APERITIVO"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/iconeAperitivo"
        android:layout_toEndOf="@+id/iconeAperitivo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/real"
        android:text="R$"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/iconeAperitivo"
        android:layout_toEndOf="@+id/iconeAperitivo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTxtPreco"
        android:text="99,99"
        android:textColor="@android:color/white"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@+id/real"
        android:layout_below="@+id/itemTxtNome"
        android:layout_toEndOf="@+id/real" />

</RelativeLayout>