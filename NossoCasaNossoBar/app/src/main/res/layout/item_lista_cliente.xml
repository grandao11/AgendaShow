<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconeCliente"
        android:src="@drawable/item_client"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTxtCelular"
        android:text="(16)99000-1000"
        android:layout_below="@+id/itemTxtNome"
        android:layout_toEndOf="@+id/iconeCliente"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTxtNome"
        android:text="NOME DO CLIENTE"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/iconeCliente"
        android:layout_toEndOf="@+id/iconeCliente" />

</RelativeLayout>