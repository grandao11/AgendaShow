<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTxtCidade"
        android:text="NOME DO APERITIVO"
        android:layout_below="@+id/itemTxtMusica"
        android:layout_toEndOf="@+id/Agenda"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTxtBebida"
        android:text="NOME DA Musica"
        android:layout_below="@+id/itemTxtCidade"
        android:layout_toEndOf="@+id/Agenda"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Agenda"
        android:src="@drawable/home"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

</RelativeLayout>