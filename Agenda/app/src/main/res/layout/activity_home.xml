<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.gustavo.agendashow.activities.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione uma opção:"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musicas"
        android:id="@+id/btnMusica"
        android:drawableLeft="@drawable/list_musica"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnMusica"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnCidade" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade"
        android:id="@+id/btnCidade"
        android:drawableLeft="@drawable/list_cidade"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnMusica"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agenda"
        android:id="@+id/btnAgenda"
        android:drawableLeft="@drawable/list_agenda"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnCidade"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnCidade" />

</RelativeLayout>