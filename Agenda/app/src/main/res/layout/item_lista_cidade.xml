<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTxtNome"
        android:text="NOME DO APERITIVO"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/btnCidade"
        android:layout_toEndOf="@+id/btnCidade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/real"
        android:text="R$"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/btnCidade"
        android:layout_toEndOf="@+id/btnCidade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTxtBairro"
        android:text="Centro"
        android:textColor="@android:color/white"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@+id/bairro"
        android:layout_below="@+id/itemTxtNome"
        android:layout_toEndOf="@+id/bairro" />

</RelativeLayout>